@model UserProfileManager.ViewModels.UserCreateViewModel
@{
    ViewData["Title"] = "Input Data User";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center py-5">
    <div class="card shadow form-card">
        <div class="card-header bg-white">
            <h2 class="h4 mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" data-valmsg-summary="true">
                </div>
                <div class="row g-4">
                    <div class="col-md-6">
                        <h5 class="fw-semibold mb-3">Identitas</h5>
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NIK" class="form-label"></label>
                            <input asp-for="NIK" class="form-control" />
                            <span asp-validation-for="NIK" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Gender" class="form-label"></label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">-- Pilih Gender --</option>
                                <option value="Laki-laki">Laki-laki</option>
                                <option value="Perempuan">Perempuan</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="BirthPlace" class="form-label"></label>
                            <input asp-for="BirthPlace" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="BirthDate" class="form-label"></label>
                            <input asp-for="BirthDate" type="date" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h5 class="fw-semibold mb-3">Alamat & Latar Belakang</h5>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label asp-for="City" class="form-label"></label>
                                <input asp-for="City" class="form-control" />
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="Province" class="form-label"></label>
                                <input asp-for="Province" class="form-control" />
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="PostalCode" class="form-label"></label>
                                <input asp-for="PostalCode" class="form-control" />
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="Nationality" class="form-label"></label>
                                <input asp-for="Nationality" class="form-control" value="Indonesia" />
                            </div>
                        </div>
                        <div class="row g-3 mt-1">
                            <div class="col-sm-6">
                                <label asp-for="MaritalStatus" class="form-label"></label>
                                <select asp-for="MaritalStatus" class="form-select">
                                    <option value="">-- Pilih Status --</option>
                                    <option value="Lajang">Lajang</option>
                                    <option value="Menikah">Menikah</option>
                                </select>
                                <span asp-validation-for="MaritalStatus" class="text-danger small"></span>
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="EducationLevel" class="form-label"></label>
                                <input asp-for="EducationLevel" class="form-control" />
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="Occupation" class="form-label"></label>
                                <input asp-for="Occupation" class="form-control" />
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="BloodType" class="form-label"></label>
                                <input asp-for="BloodType" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Photo" class="control-label"></label>
                            <input asp-for="Photo" type="file" class="form-control" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-end mt-4">
                    <a asp-action="Create" class="btn btn-outline-secondary">Reset</a>
                    <button class="btn btn-primary" type="submit">Simpan</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
