@model UserProfileManager.Models.User
@{
    ViewData["Title"] = "Detail User";
}
<div class="container min-vh-100 d-flex align-items-center justify-content-center py-5">
    <div class="card shadow form-card">
        <div class="card-header bg-white">
            <h2 class="h5 mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-3">
                    @if (!string.IsNullOrEmpty(Model.PhotoFileName))
                    {
                        <img src="~/uploads/@Model.PhotoFileName" class="img-fluid rounded border" alt="Foto User" />
                    }
                    else
                    {
                        <div class="border p-3 text-center">Tidak ada foto</div>
                    }
                </div>
                <div class="col-md-9">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Nama Lengkap</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>
                        <dt class="col-sm-4">NIK</dt>
                        <dd class="col-sm-8">@Model.NIK</dd>
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        <dt class="col-sm-4">Telepon</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                        <dt class="col-sm-4">Jenis Kelamin</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>
                        <dt class="col-sm-4">Tempat/Tgl Lahir</dt>
                        <dd class="col-sm-8">@($"{Model.BirthPlace}, {Model.BirthDate:dd MMM yyyy}")</dd>
                        <dt class="col-sm-4">Alamat</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                        <dt class="col-sm-4">Kota</dt>
                        <dd class="col-sm-8">@Model.City</dd>
                        <dt class="col-sm-4">Provinsi</dt>
                        <dd class="col-sm-8">@Model.Province</dd>
                        <dt class="col-sm-4">Kode Pos</dt>
                        <dd class="col-sm-8">@Model.PostalCode</dd>
                        <dt class="col-sm-4">Kewarganegaraan</dt>
                        <dd class="col-sm-8">@Model.Nationality</dd>
                        <dt class="col-sm-4">Status Perkawinan</dt>
                        <dd class="col-sm-8">@Model.MaritalStatus</dd>
                        <dt class="col-sm-4">Pekerjaan</dt>
                        <dd class="col-sm-8">@Model.Occupation</dd>
                        <dt class="col-sm-4">Pendidikan</dt>
                        <dd class="col-sm-8">@Model.EducationLevel</dd>
                        <dt class="col-sm-4">Gol. Darah</dt>
                        <dd class="col-sm-8">@Model.BloodType</dd>
                    </dl>

                    <div class="d-flex gap-2 justify-content-end mt-3">
                        <a class="btn btn-outline-secondary" asp-action="Create">Input Baru</a>
                        <a class="btn btn-success" asp-action="ExportPdf" asp-route-id="@Model.Id">Export PDF</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
